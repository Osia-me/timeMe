<!-- include header template -->
<% include ../partials/header%>

<div class="login-register">
  <h2 class="form-h2">Update your profile</h2>
  <form action="/users/<%= user._id %>?_method=PUT" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
          <input type="text" class="form-control" name="user[username]" value="<%= user.username %>">
      </div>
      <div class="form-group col-md-6">
        <input type="password" class="form-control" name="user[password]" placeholder="password">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-5">
        <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
      </div>
      <div class="form-group col-md-5">
        <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
      </div>
      <div class="form-group col-md-2">
        <input class="form-control" type="number" name="user[yearOfBirth]" value="<%= user.yearOfBirth %>">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
      </div>
      <div class="form-group col-md-6">
        <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-9">
        <input class="form-control" type="text" name="user[job]" value="<%= user.job %>">
      </div>
      <div class="form-group col-md-3">
        <input class="form-control" type="number" name="user[experience]" value="<%= user.experience %>">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <input class="form-control" type="text" name="user[city]" value="<%= user.city %>">
      </div>
      <div class="form-group col-md-6">
        <input class="form-control" type="text" name="user[country]" value="<%= user.country %>">
      </div>
    </div>
      <div class="form-group">
        <textarea class="form-control" type="text" name="user[description]"><%= user.description %></textarea>
      </div>
      <div class="form-group">
        <input type="submit" value="Update your profile!" class="btn btn-success btn-block">
      </div>
    </form>
  </div>
</div>

<!-- include footer template -->
<% include ../partials/footer%>
