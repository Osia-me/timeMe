<% include ../partials/header %>

<div class="row wrapper text-center">
  <div class="jumbotron">
    <h3 class="display-4">  <img src="/img/logo1.png" width="70" height="70" class="d-inline-block align-top" alt="logo"> Welcome to timeMe project</h3>
    <hr class="my-4">
    <p>Below you could find professionals in different filds</p>
    </div>

  <div class="row wrapper text-center">

    <% users.forEach(function(user){ %>
      <div class="col-md-3 col-sm-6">
        <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= user.firstName %> <%= user.lastName %></h5>
                <img src="<%= user.avatar %>" alt="avatar" class="card-img-top">
                    <p "card-text"><span><%= user.country %>, <%= user.city %></span></p>
                  <h6 class="card-subtitle mb-2 text-muted"><%= user.job %> (Experience: <%=user.experience%>)</h6>
              <a href="/users/<%= user._id %>" class="btn btn-success">More about <%=user.firstName%></a>

            </div>
          </div>
      </div>

      </li>
    <% }); %>
  </div>

  </div>
</div>

  <% include ../partials/footer %>
