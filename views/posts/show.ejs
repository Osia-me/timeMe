<% include ../partials/header %>


<h1><%= post.title %></h1>
<p><%= post.created.toDateString() %></p>
<div class="clearfix">
<div class="img-group float-left">
    <img class="img-thumbnail" src="<%= post.image %>" alt="img">
    <a href="/posts/<%= post._id %>/edit" class="btn btn-success editbtn btn-block">Edit</a>
    <form action="/posts/<%= post._id%>?_method=DELETE" method="post">
      <button class="btn btn-danger btn-block btn-xs">Delete</button>
    </form>
</div>
    <p><%= post.body %></p>
  </div>
<div class="caption">
  <p>Written By <strong><%= post.author.username %></strong></p>
  <p>You could have his our for 40 min of yours</p>
</div>



<div class="card bg-light comments">
  <div class="card-block">
    <a href="/posts/<%=post._id%>/comments/new" class="btn btn-inline btn-primary">Add New Comment</a>
  </div>

  <hr>

  <% post.comments.forEach(function(comment){ %>
      <div class="row">
        <div class="col-md-12">
          <div class="author"><%= comment.author.username %></div>
          <span class="float-right"><%= comment.created.toDateString() %></span>
          <p>
            <%= comment.text %>
          </p>
        </div>
      </div>
  <% }); %>

</div>



<% include ../partials/footer %>
