<% include ../partials/header %>

  <div class="row wrapper text-center">

    <div class="jumbotron">
      <h1 class="display-4">Welcome to timeMe project</h1>
      <p class="lead">It is unique place where you could find any expert in anything you need just you have to donate your time for somebody else.</p>
      <hr class="my-4">
      <p>Below you could find some really interesting posts with advises from experts for free about anything and you could add your posts.</p>
      <a class="btn btn-success btn-lg" href="/posts/new" role="button"><i class="fas fa-pencil-alt"></i> Write Your Post</a>
    </div>

    <% posts.forEach(function(post){ %>
      <div class="col-md-4 col-sm-6">
        <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
                <img src="<%= post.image %>" alt="" height="200px" class=" card-img-top">

              <p "card-text"><span><%=post.body.substring(0,100)%>... <a href="/posts/<%= post._id %>"> more</a></span></p>
                <h6 class="card-subtitle mb-2 text-muted">Author: Somebody</h6>
              <p>Created: <%=post.created.toDateString()%></p>

            </div>
          </div>
      </div>

      </li>
    <% }); %>
  </div>

  </div>

  <% include ../partials/footer %>
